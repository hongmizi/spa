<%= form_for @cosmetic, url: url  do |f|%>
  <span class="help-inline">Name</span>
  <%= f.text_field :name, placeholder: "Please enter the name of cosmetic"%><br/>

   <%= f.fields_for :option_types do | builder| %>
    <%= render "option_type_fields" , f: builder%>
  <% end %>

  <%= link_to_add_fields "add type", f, :option_types %> <br />

  <%= f.fields_for :avatar do | builder | %>
    <%= builder.label :avatar, "Avatar"%>
    <%= builder.file_field :image %>
  <% end %>

  <span class="help-inline">Description</span>
    <%= f.cktext_area :description, placeholder: "Please enter the description of cosmetic", :ckeditor => {:language => "en"} %>


  <%= f.submit "commit", class:"btn btn-lg btn-primary"%>
<% end %>
</script>
